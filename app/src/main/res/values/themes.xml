<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutoInsight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Dark Mode-->
    <style name="Text">
        <item name="android:textColor">#636363</item>
    </style>

    <style name="EditTextStyle">
        <!-- Add your style attributes here -->
        <item name="android:textColorHint">#636363</item>
        <!-- Add more attributes as needed -->
    </style>

    <style name="btnText">
        <!-- Add your style attributes here -->
        <item name="android:textColor">@color/white</item>
        <!-- Add more attributes as needed -->
    </style>
    <style name="SpinnerStyle">
        <!-- Set background color -->
        <item name="android:background">@color/white</item>
        <!-- Set text color -->
        <item name="android:textColor">#636363</item>
        <!-- Set dropdown background color -->
        <item name="android:popupBackground">@android:color/white</item>
        <!-- Set dropdown text color -->
        <item name="android:dropDownSelector">@android:color/darker_gray</item>
        <!-- Add more attributes as needed -->
    </style>
</resources>